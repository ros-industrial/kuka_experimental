<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

  <!-- Mass parameters (guessed), total mass should be 55 kg -->
  <xacro:property name="base_mass" value="4.0" />
  <xacro:property name="link1_mass" value="4.0" />
  <xacro:property name="link2_mass" value="19.0" />
  <xacro:property name="link3_mass" value="10.0" />
  <xacro:property name="link4_mass" value="15.0" />
  <xacro:property name="link5_mass" value="2.8" />
  <xacro:property name="link6_mass" value="0.2" />

  <!-- Kinematic parameters -->
  <xacro:property name="base_link1_length" value="0.400" />
  <xacro:property name="link1_link2_offset" value="0.025" />
  <xacro:property name="link2_length" value="0.560" />
  <xacro:property name="link2_link3_offset" value="0.035" />
  <xacro:property name="link3_link4_length" value="0.515" />
  <xacro:property name="link5_link6_length" value="0.080" />

  <!-- Cylindrical inertia tensor -->
  <xacro:macro name="cylinder_inertial" params="radius length mass *origin">
   <inertial>
     <mass value="${mass}" />
     <xacro:insert_block name="origin" />
     <inertia ixx="${0.0833333 * mass * (3 * radius * radius + length * length)}" ixy="0.0" ixz="0.0"
       iyy="${0.0833333 * mass * (3 * radius * radius + length * length)}" iyz="0.0"
       izz="${0.5 * mass * radius * radius}" />
   </inertial>
 </xacro:macro>


  <xacro:macro name="kuka_kr10r1100sixx" params="prefix">
    <xacro:include filename="$(find kuka_resources)/urdf/common_materials.xacro"/>
    <link name="${prefix}base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/visual/base_link.stl" />
        </geometry>
        <xacro:material_kuka_black />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/collision/base_link.stl" />
        </geometry>
      </collision>
      <xacro:cylinder_inertial radius="${base_link1_length/4}" length="${base_link1_length/2}" mass="${base_mass}">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      </xacro:cylinder_inertial>
    </link>
    <link name="${prefix}link_1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/visual/link_1.stl" />
        </geometry>
        <xacro:material_kuka_orange />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/collision/link_1.stl" />
        </geometry>
      </collision>
      <xacro:cylinder_inertial radius="${base_link1_length/4}" length="${base_link1_length/2}" mass="${link1_mass}">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      </xacro:cylinder_inertial>
    </link>
    <link name="${prefix}link_2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/visual/link_2.stl"/>
        </geometry>
        <xacro:material_kuka_orange />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/collision/link_2.stl" />
        </geometry>
      </collision>
      <xacro:cylinder_inertial radius="${base_link1_length/4}" length="${link2_length}" mass="${link2_mass}">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      </xacro:cylinder_inertial>
    </link>
    <link name="${prefix}link_3">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/visual/link_3.stl" />
        </geometry>
        <xacro:material_kuka_orange />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/collision/link_3.stl" />
        </geometry>
      </collision>
      <xacro:cylinder_inertial radius="${link2_link3_offset}" length="${link2_link3_offset*10}" mass="${link3_mass}">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      </xacro:cylinder_inertial>
    </link>
    <link name="${prefix}link_4">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/visual/link_4.stl" />
        </geometry>
        <xacro:material_kuka_orange />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/collision/link_4.stl" />
        </geometry>
      </collision>
      <xacro:cylinder_inertial radius="${base_link1_length/4}" length="${link3_link4_length}" mass="${link4_mass}">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      </xacro:cylinder_inertial>
    </link>
    <link name="${prefix}link_5">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/visual/link_5.stl" />
        </geometry>
        <xacro:material_kuka_orange />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/collision/link_5.stl" />
        </geometry>
      </collision>
      <xacro:cylinder_inertial radius="${link5_link6_length/2}" length="${link5_link6_length}" mass="${link5_mass}">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      </xacro:cylinder_inertial>
    </link>
    <link name="${prefix}link_6">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/visual/link_6.stl" />
        </geometry>
        <xacro:material_kuka_pedestal />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://kuka_kr10_support/meshes/kr10r1100sixx/collision/link_6.stl" />
        </geometry>
      </collision>
      <xacro:cylinder_inertial radius="${link5_link6_length/2}" length="${link5_link6_length/10}" mass="${link6_mass}">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      </xacro:cylinder_inertial>
    </link>
    <!-- Following REP199, this frame shall be use to attach EEF or other equipment -->
    <link name="${prefix}flange" />

    <joint name="${prefix}joint_a1" type="revolute">
      <origin xyz="0 0 ${base_link1_length}" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}link_1"/>
      <axis xyz="0 0 -1"/>
      <limit effort="0" lower="${radians(-170)}" upper="${radians(170)}" velocity="${radians(300)}"/>
    </joint>
    <joint name="${prefix}joint_a2" type="revolute">
      <origin xyz="${link1_link2_offset} 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_1"/>
      <child link="${prefix}link_2"/>
      <axis xyz="0 1 0"/>
      <limit effort="0" lower="${radians(-190)}" upper="${radians(45)}" velocity="${radians(225)}"/>
    </joint>
    <joint name="${prefix}joint_a3" type="revolute">
      <origin xyz="${link2_length} 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_2"/>
      <child link="${prefix}link_3"/>
      <axis xyz="0 1 0"/>
      <limit effort="0" lower="${radians(-120)}" upper="${radians(156)}" velocity="${radians(225)}"/>
    </joint>
    <joint name="${prefix}joint_a4" type="revolute">
      <origin xyz="0 0 ${link2_link3_offset}" rpy="0 0 0"/>
      <parent link="${prefix}link_3"/>
      <child link="${prefix}link_4"/>
      <axis xyz="-1 0 0"/>
      <limit effort="0" lower="${radians(-185)}" upper="${radians(185)}" velocity="${radians(381)}"/>
    </joint>
    <joint name="${prefix}joint_a5" type="revolute">
      <origin xyz="${link3_link4_length} 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_4"/>
      <child link="${prefix}link_5"/>
      <axis xyz="0 1 0"/>
      <limit effort="0" lower="${radians(-120)}" upper="${radians(120)}" velocity="${radians(311)}"/>
    </joint>
    <joint name="${prefix}joint_a6" type="revolute">
      <origin xyz="${link5_link6_length} 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_5"/>
      <child link="${prefix}link_6"/>
      <axis xyz="-1 0 0"/>
      <limit effort="0" lower="${radians(-350)}" upper="${radians(350)}" velocity="${radians(492)}"/>
    </joint>
    <joint name="${prefix}joint_a6-flange" type="fixed">
      <parent link="${prefix}link_6"/>
      <child link="${prefix}flange"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- ROS base_link to KUKA $ROBROOT coordinate system transform -->
    <link name="${prefix}base" />
    <joint name="${prefix}base_link-base" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}base"/>
    </joint>

    <!-- This frame corresponds to the $TOOL coordinate system in KUKA KRC controllers -->
    <link name="${prefix}tool0" />
    <joint name="${prefix}flange-tool0" type="fixed">
      <parent link="${prefix}flange"/>
      <child link="${prefix}tool0"/>
      <origin xyz="0 0 0" rpy="0 ${radians(90)} 0"/>
    </joint>
  </xacro:macro>
</robot>
