; Declaration of KRL variables
DECL INT ret	; Return value for RSI commands
DECL INT CONTID	; ContainerID
DECL REAL InterfaceVersion

;FOLD INI
  ;FOLD BASISTECH INI
    GLOBAL INTERRUPT DECL 3 WHEN $STOPMESS==TRUE DO IR_STOPM ( )
    INTERRUPT ON 3 
    BAS (#INITMOV,0 )
  ;ENDFOLD (BASISTECH INI)
  ;FOLD USER INI
    ;Make your modifications here

  ;ENDFOLD (USER INI)
;ENDFOLD (INI)

InterfaceVersion = 2003
;ROS_CurrentOpState = #RSI12ms_Pos
WAIT SEC 1.0

; Move to start position
PTP $AXIS_ACT_MEAS

; Create RSI Context 
ret = RSI_CREATE("ros_rsi_ext",CONTID,TRUE)
IF (ret <> RSIOK) THEN
  HALT
ENDIF
ret=RSI_SETPUBLICPAR(CONTID, "Version", "Value", InterfaceVersion)
   
LOOP
   ; Start RSI execution
   ret = RSI_ON(#ABSOLUTE, #IPO, #BASE)
   IF (ret <> RSIOK) THEN
     HALT
   ENDIF
   
   ; Sensor guided movement
   RSI_MOVECORR()
   
   ; Turn off RSI 
   ret = RSI_OFF()
   IF (ret <> RSIOK) THEN
     HALT
   ENDIF
   PTP $AXIS_ACT_MEAS

   CONTINUE
   IF (ROS_ReqOpStateChange()) THEN
      EXIT
   ENDIF
ENDLOOP

END
